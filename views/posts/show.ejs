<%- include('../partials/header') %>

<a href="/posts">All Entries</a>
<p>
  <%=
    `${post.createdAt.toLocaleDateString('en-US', date)}
    at ${time}`
  %>
</p>
<h3><%= post.title %></h3>
<a href="/posts/<%= post.id %>/edit">Edit</a>
<% if (typeof post.text === String) { %>
  <p><%= post.text %></p>
<% } else {
  post.text.forEach(function (p) { %>
    <p><%= p %></p>
<% }); %>
<% } %>


<% if (post.author) { %>
  <p>
    <%= post.author %>, <a href="<%= post.link %>"><%= post.source %></a>
  </p>
<% } else { %>
  <a href="<%= post.link %>"><%= post.source %></a></p>
<% } %>

<p>
  <% post.tags.forEach(function (tag, idx) { %>
    <% if (idx === (post.tags.length - 1)) { %>
      <span><%= tag %></span>
    <% } else { %>
      <span><%= tag %>, </span>
    <% } %>
  <% }); %>
</p>



<%- include('../partials/footer') %>